<!-- HERO SECTION -->
<section class="hero text-white">
  <div class="container">
    <div class="row align-items-center h-100">
      <!-- Left div -->
      <div class="col-md-5 text-left">
        <!-- Add content here for the left side -->
        <p>Template GIF goes here</p>
      </div>

      <!-- Right div -->
      <div class="col-md-7 text-left">
        <div class="hero-inner">
          <h1 class="h1-small">Online Trophies Australia</h1>
          <h1>Trophies designed by you.<br>
          Made for you.<br>
          Delivered with care.</h1>
            <%= link_to "Start Customising", products_path, class: "btn btn-primary mt-4" %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FEATURE ICONS -->
<section class="bg-light py-5">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-4">
        <i class="fas fa-truck fa-2x mb-2" style="color: #002147;"></i>
        <h5 class="fw-semibold">Fast Delivery</h5>
        <p class="text-muted small">Custom orders dispatched from Australia with tracking.</p>
      </div>
      <div class="col-md-4">
        <i class="fas fa-trophy fa-2x mb-2" style="color: #002147;"></i>
        <h5 class="fw-semibold">Personalised Awards</h5>
        <p class="text-muted small">Design your own or use our easy templates with TrophyMaker.</p>
      </div>
      <div class="col-md-4">
        <i class="fas fa-globe fa-2x mb-2" style="color: #002147;"></i>
        <h5 class="fw-semibold">Nationwide Shipping</h5>
        <p class="text-muted small">From Sydney to Perth, we deliver everywhere in Australia.</p>
      </div>
    </div>
  </div>
</section>

