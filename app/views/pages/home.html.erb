<!-- HERO SECTION -->
<section class="hero text-white">
  <div class="container">
    <div class="row align-items-center h-100">
      <!-- Left div -->
      <div class="col-md-5 d-flex justify-content-start align-items-center">
        <%= image_tag "Trophy_made Home Page.png", class: "img-fluid", alt: "TrophyMade Home Page Template", style: "max-width: 70%; height: auto;" %>
      </div>

      <!-- Right div -->
      <div class="col-md-7 text-left">
        <div class="hero-inner">
          <%# <h1 class="h1-small">Online Trophies Australia</h1> %>
          <h1 class="tight-lines mb-0">
            <span>Trophies made for you.</span><br>
            <span><i>
              <%= link_to product_path(13492, anchor: "trophymaker"), style: "color: #F3A712; text-decoration: none; font-weight:400;" do %>
                Designed by you.  <i class="fas fa-arrow-up-right-from-square" style="font-size: 0.4em; vertical-align: middle; color: #F3A712"></i>
