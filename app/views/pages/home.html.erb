<!-- TROPHYMAKER INTRO -->
<section class="bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h4 class="fw-bold">Create your award with TrophyMaker</h4>
        <p>Upload your logo, add text, select fonts and sizes – all within our easy editor.</p>
        <%= link_to "Learn More", "#", class: "btn btn-outline-primary" %>
      </div>
      <div class="col-md-6 text-center">
        <%= image_tag "trophy-maker-preview.webp", class: "img-fluid", alt: "TrophyMaker example" %>
      </div>
    </div>
  </div>
</section>

<!-- TESTIMONIALS SLIM -->
<section class="testimonials text-center">
  <div class="container">
    <h2 class="section-title">Customer Reviews</h2>
    <div class="row justify-content-center">
      <% ["Perfect finish!", "Fast & reliable.", "Flawless service."].each_with_index do |review, i| %>
        <div class="col-md-3">
          <p class="quote">“<%= review %>”</p>
          <p class="name">– Customer <%= i + 1 %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- NEWSLETTER -->
<section class="newsletter bg-light text-center">
  <div class="container">
    <h4>Subscribe for VIP Offers</h4>
    <form class="row justify-content-center mt-3">
      <div class="col-12 col-sm-6 col-md-4">
        <input type="email" class="form-control" placeholder="Your email">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-dark">Subscribe</button>
      </div>
    </form>
  </div>
</section>
