<h1>Products</h1>
<div class="col-12 col-lg-8">
  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product), class: "text-decoration-none text-dark", data: { marker_id: product.id } do %>
        <div class="card-trip">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" />
          <div class="card-trip-infos d-flex justify-content-between align-items-center">
            <div>
              <h2><%= product.name %></h2>
            </div>
            <h2 class="card-trip-pricing">$<%= product.price %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
