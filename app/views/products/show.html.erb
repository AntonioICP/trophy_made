<div class="d-flex justify-content-center align-items-center" style="margin: 20px;">
  <div class="col-12 col-lg-8">
    <div class="card-trip-show shadow">
    <h2><%= @product.name %></h2>
      <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="w-100" style="height: 500px; object-fit: contain;" />
      <div class="card-trip-infos d-flex justify-content-between align-items-center p-3">
        <div>
          <p><%= @product.description %></p>
        </div>
        <h2 class="card-trip-pricing">$<%= @product.price %></h2>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center align-items-center">
  <%= render "orders_form", product: @product, order: @order %>
</div>

<div class="d-flex justify-content-center align-items-center" style="margin: 30px;">
  <div class="col-12 col-lg-8">
    <h1>Design your award with TrophyMaker</h1>
    <div class="card-trip-show shadow">
      <img src="<%= @product.customiser_template %>" alt="<%= @product.name %>" class="w-100" style="height: 500px; object-fit: contain;" />
      <div class="card-trip-infos d-flex justify-content-between align-items-center p-3">
        <div>
          <p>Click and drag to move your elements around the trophype
              Engraving area is within the red border</p>
        </div>
      </div>
    </div>
  </div>
</div>
