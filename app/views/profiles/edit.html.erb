<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Edit Profile</h2>

          <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h4>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :first_name, class: "form-label" %>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :last_name, class: "form-label" %>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :phone, class: "form-label" %>
              <%= f.telephone_field :phone, class: "form-control" %>
            </div>

            <h5 class="mt-4 mb-3">Address Information</h5>

            <div class="mb-3">
              <%= f.label :address_line_1, "Address Line 1", class: "form-label" %>
              <%= f.text_field :address_line_1, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :address_line_2, "Address Line 2", class: "form-label" %>
              <%= f.text_field :address_line_2, class: "form-control" %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :city, class: "form-label" %>
                  <%= f.text_field :city, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="mb-3">
                  <%= f.label :state, class: "form-label" %>
                  <%= f.text_field :state, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="mb-3">
                  <%= f.label :postal_code, class: "form-label" %>
                  <%= f.text_field :postal_code, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :country, class: "form-label" %>
              <%= f.text_field :country, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Cancel", profile_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Update Profile", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
