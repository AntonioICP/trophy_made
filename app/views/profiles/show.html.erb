<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My Profile</h2>
            <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-outline-primary" %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <h5>Account Information</h5>
              <p><strong>Email:</strong> <%= current_user.email %></p>
              <% if current_user.first_name.present? %>
                <p><strong>First Name:</strong> <%= current_user.first_name %></p>
              <% end %>
              <% if current_user.last_name.present? %>
                <p><strong>Last Name:</strong> <%= current_user.last_name %></p>
              <% end %>
              <% if current_user.phone.present? %>
                <p><strong>Phone:</strong> <%= current_user.phone %></p>
              <% end %>
            </div>

            <div class="col-md-6">
              <h5>Address</h5>
              <% if current_user.address_line_1.present? %>
                <p>
                  <%= current_user.address_line_1 %><br>
                  <%= current_user.address_line_2 if current_user.address_line_2.present? %><br>
                  <%= current_user.city %>, <%= current_user.state %> <%= current_user.postal_code %><br>
                  <%= current_user.country %>
                </p>
              <% else %>
                <p class="text-muted">No address on file</p>
              <% end %>
            </div>
          </div>

          <hr>

          <div class="text-center">
            <%= link_to "Change Password", edit_user_registration_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
