<div class="row">
  <div class="col-12 text-center">

    <div class="row my-4 justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Update Products</h5>
          </div>
          <div class="card-body d-flex align-items-center">
            <div id="csv-upload-area" class="d-flex flex-grow-1 align-items-center">
              <div class="flex-grow-1">
                <%= form_with url: upload_csv_admin_products_path, local: true, html: { multipart: true } do |form| %>
                  <div class="mb-3">
                    <%= form.file_field :csv_file, accept: ".csv", class: "form-control" %>
                  </div>
                  <%= form.submit "Upload CSV", class: "btn btn-primary" %>
                <% end %>
              </div>
              <div class="ms-4">
                <div class="card bg-info text-white">
                  <div class="card-body text-center">
                    <h3><%= @total_products %></h3>
                    <p class="mb-0">Total Variant Products</p>
                  </div>
                </div>
              </div>
            </div>
            <div id="csv-upload-spinner" class="ms-4" style="display: none;">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Uploading...</span>
              </div>
              <div class="text-primary mt-2">Uploading...</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector('form[action*="upload_csv"]');
    const spinner = document.getElementById('csv-upload-spinner');
    const uploadArea = document.getElementById('csv-upload-area');
    if(form && spinner && uploadArea) {
      form.addEventListener('submit', function() {
        uploadArea.style.display = 'none';
        spinner.style.display = 'block';
      });
    }
  });
</script>
